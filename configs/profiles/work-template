# Work Profile Configuration
# Place this file at ~/.config/git/profiles/work

[user]
    name = Your Professional Name
    email = your.name@company.com
    # Uncomment and set your work GPG signing key
    # signingkey = YOUR_WORK_GPG_KEY_ID

[core]
    # SSH configuration will be added automatically if SSH key is generated

[commit]
    # Enable GPG signing for work commits (uncomment if needed)
    # gpgsign = true

[alias]
    # Work-specific aliases
    standup = log --since='yesterday' --author='your.name@company.com' --oneline --no-merges
    work-log = log --author='your.name@company.com' --since='1 week ago' --oneline
    review = diff --cached
    
[url "git@github.com-work:"]
    # Use work SSH key for company repositories
    insteadOf = git@github.com:company-name/

# Additional work-specific configurations
[tag]
    # Sort tags by version (useful for release management)
    sort = version:refname

[branch]
    # Automatically set up tracking when creating branches
    autoSetupMerge = always